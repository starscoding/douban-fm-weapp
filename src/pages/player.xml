<view class="player-page container">
  <view class="player__circle-progress__container {{state.isPlaying ? 'playing' : ''}}" catchtap="handleClickCover">
    <image class="player__circle-progress__content" src="{{props.player.playing.cover}}" />
    <!-- <view class="icon-change puase"></view> -->
    <!-- play icon
      <view class="icon-change play"></view>-->
      <!--circleProgress -->
    <view class="player__circle-progress__left-wrapper">
      <view class="player__circle-progress__left-inner-circle"
        style="transform:rotate({{state.leftRotate}}deg)">
      </view>
    </view>
    <view class="player__circle-progress__right-wrapper">
      <view class="player__circle-progress__right-inner-circle"
        style="transform:rotate({{state.rightRotate}}deg)">
      </view>
    </view>
  </view>
  <view class="player-song-info">
    <text class="player-song-info__song-title">{{props.player.playing.title}}</text>
    <text class="player-song-info__artist">{{props.player.playing.artist}}</text>
  </view>
  
  <!--bottom-->
  <view class="player__user-actions">
    <button class="player__user-actions__btn-icon-trash"></button>
    <button class="player__user-actions__btn-icon-heart"></button>
    <button class="player__user-actions__btn-icon-next"
      catchtap="handlePlayNextSong">
    </button>
  </view>
</view>
