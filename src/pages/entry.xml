<view class="entry-page container {{props.wechatAuth.authorized ? 'authorized' : ''}}">
  <!-- 已获取微信用户信息 -->
  <view class="header">
    <image class="user-avatar"
      src="{{props.wechatAuth.avatarUrl}}" />
    <view class="user-identity">
      <text class="wechat-nickname">{{props.wechatAuth.nickName}}</text>
      <view wx:if="{{props.doubanAuth.accessToken}}" class="douban-status">
        <text class="douban-label">douban</text>
        <text>{{props.doubanAuth.userName}}</text>  
      </view>
      <navigator wx:else class="douban-status" url="/pages/douban-auth" open-type="navigate">
        <text class="douban-label warning">尚未绑定豆瓣账户</text>
      </navigator>
    </view>
    <view class="user-actions">
      <navigator url="/pages/setting" open-type="navigate" class="icon icon-cog"></navigator>
    </view>
  </view>
  <view class="content">
    <list key="groups" name="channel-group" />
  </view>
  <view class="footer">
    <component key="playing" name="playing"></component>
  </view>
</view>
