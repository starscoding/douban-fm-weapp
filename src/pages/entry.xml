<view class="entry-page container {{state.isAuthorized ? 'authorized' : ''}}">
  <!-- 已获取微信用户信息 -->
  <view class="header">
    <image class="user-avatar"
      src="{{props.wechatAuth.avatarUrl}}" />
    <view class="user-identity">
      <text class="wechat-nickname">{{props.wechatAuth.nickName}}</text>
      <view wx:if="{{props.doubanAuth.accessToken}}" class="douban-status">
        <text class="douban-label">douban</text>
        <text>{{props.doubanAuth.userName}}</text>  
      </view>
      <view wx:else class="douban-status" catchtap="handleDoubanAuth">
        <text class="douban-label warning">尚未绑定豆瓣账户</text>
      </view>
    </view>
    <view class="user-actions">
      <button class="icon icon-cog" catchtap="handleChangeAppSetting"></button>
    </view>
  </view>
  <view class="content">
  </view>
</view>
